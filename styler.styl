@keyframes pisca 
    0% 
        opacity 0.2
    50% 
        opacity 1
    100% 
        opacity 0.2
    

body 
    margin-top 0
    display flex
    justify-content center
    align-items center
    height 100vh
    font-family: Arial, Helvetica, sans-serif
.pageurna
    .pisca
        animation-name: pisca
        animation-duration: 1s
        animation-iteration-count: infinite
    .aviso-gigante
        font-size: 70px
        font-weight: bold
        text-align: center
        margin: auto
    .urna
        background-color #dbb5c9
        padding 30px
        display flex
        .tela
            width 500px
            height  320px
            border 2px solid #555
            display flex
            flex-direction: column
            background linear-gradient(to right, #e8e8e8, #c1c1c1)
            .d-1
                flex 1
                display: flex
                .d-1-left
                    flex: 1
                    display: flex
                    flex-direction: column
                    padding-left: 20px
                    .d-1-1
                        height: 50px
                        display: flex
                        align-items: center
                    .d-1-2
                        height: 50px
                        display: flex
                        align-items: center
                        justify-content: center
                    .d-1-3
                        height: 50px
                        .numero
                            display: inline-block
                            width: 30px
                            height:40px 
                            border: 1px solid #000
                            text-align: center
                            line-height 40px
                            font-size 25px
                    .d-1-4
                        flex 1
                        line-height: 25Spx
                        .aviso-grande
                            font-size: 40px
                            font-weight: bold
                        
                .d-1-right
                    width: 90px
                    display: flex
                    flex-direction: column
                    align-items: flex-end
                    .d-1-img
                        border: 1px solid #000
                        background-color: #fff
                        text-align: center
                        font-size: 14px
                        img
                            width 100%
                    .small
                        width: 80%
                        font-saize 12px
            .d-2
                height: 75px
                font-size: 15px
                border-top: 2px solid #000
                padding-left: 10px
        .teclado
            margin-left 30px
            background-color: #403A3A
            .teclado--linha
                display flex
                justify-content: center
                align-items flex-end
                .teclado--botao
                    width: 70px
                    max-height: 40px
                    background-color: #000
                    color: #fff
                    font-size: 25px
                    display flex
                    justify-content: center
                    align-items: center
                    margin: 10px
                    box-shadow: 3px 3px 0px #555
                    text-transform: uppercase
                .btn-branco
                    background-color: #fff
                    color #000
                    font-size: 15px
                .btn-corrige
                    background-color: #F09046
                    color #000
                    font-size: 15px
                .btn-confirma
                    background-color: #48C079
                    color #000
                    font-size: 15px
                    width  90px
                    height 50px




        